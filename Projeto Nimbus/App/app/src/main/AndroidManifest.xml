<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nimbus"
        tools:targetApi="31">
        <activity
            android:name=".ui.screens.PredictionAIActivity"
            android:exported="true"
            android:label="@string/title_activity_prediction_aiactivity"
            android:theme="@style/Theme.Nimbus" />
        <activity
            android:name=".ui.screens.TeamRegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_team_register"
            android:theme="@style/Theme.Nimbus" />
        <activity
            android:name=".ui.screens.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Nimbus" />
        <activity
            android:name=".ui.screens.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Nimbus" />
        <activity
            android:name=".ui.screens.MyTeamsScreen"
            android:exported="true"
            android:label="@string/title_activity_my_teams_screen"
            android:theme="@style/Theme.Nimbus" />
        <activity
            android:name=".ui.screens.LoginScreen"
            android:exported="true"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/Theme.Nimbus" />
        <activity
            android:name=".ui.screens.SplashScreen"
            android:exported="true"
            android:label="Nimbus"
            android:theme="@style/Theme.Nimbus">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.screens.OnboardingScreen"
            android:exported="true"
            android:label="@string/title_activity_onboarding_screen"
            android:theme="@style/Theme.Nimbus" />
    </application>

</manifest>